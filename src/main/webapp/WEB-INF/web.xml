<?xml version="1.0" encoding="UTF-8"?>


<web-app>

    <display-name>openspending2rdf Web Access</display-name>

    <servlet>
      <servlet-name>o2r</servlet-name>
      <description>The openspending2rdf-servlet</description>
      <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
      <init-param>
         <param-name>
	   jersey.config.server.provider.packages
	</param-name>
         <param-value>org.aksw.linkedspending.Scheduler</param-value>
      </init-param>
      <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
      <servlet-name>o2r</servlet-name>
      <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>


</web-app>
